@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">BEM VINDO USUARIO!</h1>
    <p>SISTEMA DE GERENCIAMENTO DE DEMANDAS DA SUPERITENCIA DE ANALISE E DESENV. DE SISTEMAS.</p>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIGD</title>
    <!-- Incluir os arquivos CSS e JS do Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        /* Estilos personalizados */
        .btn {
            font-size: 120%; /* Aumentar o tamanho da fonte em 20% */
            padding: 12px 24px; /* Aumentar o tamanho do box */
        }
    </style>
</head>
<body>
    <div class="container mt-5 d-flex justify-content-center">
        <a asp-area="" asp-controller="Home" asp-action="NovaDemanda" class="btn btn-primary ms-2">Cadastrar Nova Demanda</a>
        <a asp-area="" asp-controller="Home" asp-action="DemandasAbertas" class="btn btn-success ms-2">Acompanhar Demandas Abertas</a>
        <a asp-area="" asp-controller="Home" asp-action="ListarTodas" class="btn btn-warning ms-2">Listar Todas as Demandas</a>
        <a asp-area="" asp-controller="Home" asp-action="Relatorios" class="btn btn-danger ms-2">Relatórios</a>
    </div>

    <!-- Incluir o arquivo JS do Bootstrap (opcional, caso queira usar recursos interativos) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
</body>
</html>
